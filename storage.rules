rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read and write access to the 'ideas' folder for authenticated users
    match /ideas/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to profile pictures if needed by your app
    match /profilePictures/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
    // Allow users to read profile pictures
    match /profile-pictures/{userId} {
      allow read;
      // Allow authenticated users to write to their own profile picture path
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}